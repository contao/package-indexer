{
    "name": "contao/package-indexer",
    "description": "Composer package indexer",
    "type": "project",
    "license": "MIT",
    "keywords": ["contao", "manager", "composer", "packages", "algolia", "search"],
    "homepage": "https://www.contao.org",
    "authors": [
        {
            "name": "Andreas Schempp",
            "homepage": "https://github.com/aschempp",
            "role": "Developer"
        },
        {
            "name": "Yanick Witschi",
            "homepage": "https://github.com/toflar",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/contao/package-indexer"
    },
    "require": {
        "php": "^7.2.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "algolia/algoliasearch-client-php": "^1.27",
        "cpliakas/git-wrapper": "^2.0",
        "eightpoints/guzzle-bundle": "^7.3",
        "friendsofphp/php-cs-fixer": "^2.12",
        "gregurco/guzzle-bundle-cache-plugin": "^1.0",
        "symfony/console": "^4.1",
        "symfony/debug-pack": "^1.0",
        "symfony/finder": "^4.1",
        "symfony/flex": "^1.0",
        "symfony/framework-bundle": "^4.1",
        "symfony/lts": "^4@dev",
        "symfony/monolog-bundle": "^3.3",
        "symfony/yaml": "^4.1"
    },
    "require-dev": {
        "symfony/dotenv": "^4.1"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false
        }
    }
}
